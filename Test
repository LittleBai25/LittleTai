import streamlit as st
import pandas as pd
import numpy as np

# 设置页面标题
st.set_page_config(page_title="简单数据可视化", layout="wide")

# 添加标题和介绍
st.title("简化版数据可视化")
st.write("这是一个不使用复杂库的简单Streamlit应用。")

# 创建一些示例数据
data = pd.DataFrame({
    '姓名': ['张三', '李四', '王五', '赵六', '钱七'],
    '年龄': [25, 30, 22, 28, 35],
    '收入': [8000, 12000, 7000, 10000, 15000]
})

# 显示数据
st.header("数据表格")
st.dataframe(data)

# 简单图表
st.header("简单图表")
st.bar_chart(data[['年龄', '收入']])

# 数据筛选器
st.header("数据筛选")
min_age = st.slider('最小年龄', min_value=20, max_value=40, value=25)
filtered_data = data[data['年龄'] >= min_age]
st.write("筛选结果：")
st.dataframe(filtered_data)

# 添加一个按钮
if st.button('显示统计信息'):
    st.write("数据统计摘要：")
    st.write(data.describe())
